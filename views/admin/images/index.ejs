<% layout('/layout/admin') %>
<div id="fh5co-main">
  <div class="container">
    <div class="row">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Name</th>
            <th>Image</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% data.forEach(function(item){ %>
            <tr>
              <td><%= item.id %></td>
              <td><%= item.title %></td>
              <td><%= item.name %></td>
              <td class="text-center"><img src="/uploads/<%= item.name %>" width="100"></td>
              <td>
                <a href="/admin/images/<%= item.id %>">Edit</a>
                <a href="/admin/images/delete/<%= item.id %>" onclick = "return confirm('Are you sure?')">Delete</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>